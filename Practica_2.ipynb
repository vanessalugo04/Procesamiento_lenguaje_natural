# Conversor de Mayúsculas a Minúsculas

def to_minusculas(texto):
    letras = ""
    for letra in texto:
        # Se usa ord() para obtener el valor ASCII del carácter
        if ord(letra) >= 65 and ord(letra) <= 90:
            # Se suma 32 para convertir a minúscula y chr() para volver a carácter
            nueva_letra = chr(ord(letra) + 32)
            letras += nueva_letra
        else:
            # Si no es mayúscula (espacios, números o ya minúscula), se deja igual
            letras += letra
    return letras

def remueve_stopwords(texto):
    set_stopwords = set([
        'de', 'la', 'que', 'el', 'en', 'y', 'a', 'los', 'del', 'se', 'las', 'por', 'un', 'para', 'con', 'no', 'una',
        'su', 'al', 'lo', 'como', 'más', 'pero', 'sus', 'le', 'ya', 'o', 'este', 'sí', 'porque', 'esta', 'entre',
        'cuando', 'muy', 'sin', 'sobre', 'también', 'me', 'hasta', 'hay', 'donde', 'quien', 'desde', 'todo',
        'nos', 'durante', 'todos', 'uno', 'les',  # 50
        'ni',  # 51
        # Palabras adicionales
        "tú", "tus", "te", "ti", "tu", "vos", "vosotros", "vosotras", "ustedes", "su", "sus", "ello", "ellos",
        "ellas", "mío", "mía", "míos", "mías", "tuyo", "tuya", "tuyos", "tuyas", "suyo", "suya", "suyos",
        "suyas", "nuestro", "nuestra", "nuestros", "nuestras",  # 80
        # Contracciones comunes
        "al",  # a + el
        "del"  # de + el
    ])
    token = ""
    tokens = [None]*len(texto)
    j = 0

    # Verifica si el último carácter es una letra para agregar un punto
    if (ord(texto[-1]) >= 65 and ord(texto[-1]) <= 90) or (ord(texto[-1]) >= 97 and ord(texto[-1]) <= 122):
        texto = texto + '.'

    print(texto)

    for i in range(0, len(texto)):
        # Rango ASCII para letras mayúsculas (65-90) y minúsculas (97-122)
        if (ord(texto[i]) >= 65 and ord(texto[i]) <= 90) or (ord(texto[i]) >= 97 and ord(texto[i]) <= 122):
            token += texto[i]
        else:
            if token in set_stopwords:
                token = ""
            else:
                tokens[j] = token
                token = ""
                j += 1

    return tokens[0:j]

